<section class="hero is-primary is-medium">
    <div class="hero-body">
        <div class="container has-text-centered">
            <h1 class="title has-text-weight-bold">
                Welcome
            </h1>
            <h2 class="subtitle has-text-weight-semibold">
                “The purpose of life is not to be happy. It is to be useful, to be
                honorable, to be compassionate, to have it make some difference that
                you have lived and lived well.”
                <strong>― Ralph Waldo Emerson</strong>
            </h2>
        </div>
    </div>
</section>
{{!-- Hero/Showcase ends here --}}
<section class="section has-background-light">
    <div class="container">
        <div class="columns">
            <div class="column is-7">
                <h1 class="title">Mission Statement</h1>
                <h2 class="subtitle">
                    Lorem ipsum, dolor sit amet consectetur adipisicing elit. Sit et
                    eos mollitia magni veniam autem quasi perspiciatis dolore. Eum
                    voluptatem dolorum cumque delectus. Ipsa fugiat aut omnis nulla
                    soluta officiis?
                </h2>
            </div>
            <div class="column right-image">
                <img src="https://s32152.pcdn.co/wp-content/uploads/2018/11/UN0157364.jpg" alt="unicef image" />
            </div>
        </div>
    </div>
</section>
<div class="section">
    <table class="table is-fullwidth">
        <div class="container">
            <div class="columns charities is-scrollable">
                {{#each charities}}
                <div class="column is-one-third">
                    {{!-- Name of table gets inserted here --}}

                    <div class="card large has-background-grey-lighter cardsss">
                        <div class="card-image">
                            <figure class="image">
                                {{!-- Name of table column holding image_url --}}
                                <img src={{ image_url }} "https://images.unsplash.com/photo-1475778057357-d35f37fa89dd?dpr=1&auto=compress,format&fit=crop&w=1920&h=&q=80&cs=tinysrgb&crop="
                                    alt="Image" />
                            </figure>
                        </div>
                        <div class="card-content">
                            <div class="media">
                                <div class="media-content">
                                    {{!-- Name of charity inserted here --}}
                                    <p class="title is-4 no-padding">{{ title }}</p>
                                    <p>
                                        {{!-- Link to rendered charity page --}}
                                        <span class="title is-6"><a href={{ contact }}>Email/Contact</a></span>
                                        {{!--"http://twitter.com/#">@zhaocrack</a></span> --}}
                                    </p>
                                    {{!-- Category the charity belongs under --}}
                                    <p class="subtitle is-6">{{ category }}Category or Possibly goal here?</p>
                                    {{!-- <img src= /> --}}
                                </div>
                            </div>
                            <div class="content">
                                {{ descript }}
                                <div class="background-icon">
                                    <span class="icon-twitter"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                {{/each}}
            </div>
        </div>
    </table>
    <nav class="pagination is-centered" role="navigation" aria-label="pagination">
        <a class="pagination-previous" id="previous">Previous</a>
        <a class="pagination-next" id="next">Next</a>
    </nav>
</div>
<script>
    $("#next").on('click',  function () {
        $(".cardsss").animate({ right: '+=500px', left: '-=375px' });
    });
    $("#previous").on('click', function () {
        $(".cardsss").animate({ left: '+=375px' });
    });
</script>
